<div class="col-md-3 mB-30">
  <div class="row mL-80 image-report">
    <%= image_tag "report.png" %>
  </div>
  <h6 class="row mL-50">
    <%= t ".title" %>: <%= report.title %>
  </h6>
  <h6 class="row mL-50">
    <%= t ".date" %>: <%= report.date %>
  </h6>
  <h6 class="row mL-50">
    <%= t ".approve" %>:
    <%= Report.human_enum_name(:status, :"#{report.status}") %>
  </h6>
  <div class="row link_to mL-50">
    <span class="mR-30">
      <span class="icon-holder">
        <i class="c-blue-500 fa fa-eye"></i>
      </span>
      <%= link_to t(".view"), trainer_report_path(report.id),
        class: "c-blue-500" %>
    </span>
    <span class="mR-30">
      <span class="icon-holder">
        <i class="c-red-500 fa fa-times"></i>
      </span>
      <%= link_to t(".delete"), trainer_report_path(report.id), method: :delete,
        data: {confirm: t(".message_delete")}, class: "c-red-500" %>
    </span>
  </div>
</div>
